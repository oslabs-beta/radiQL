{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": false,
        "module": "CommonJS",
        "moduleResolution": "node",
        "target": "ES6",
        "allowJs": true,
        "jsx": "react",
        "esModuleInterop": true,
    },
    "include": [
        "./client/**/*",
        "./server/**/*"
    ],
    "exclude": ["./coverage", "./dist", "__tests__", "jest.config.js", "./node_modules"]
}